{
  "name": "xrpl-did",
  "version": "0.0.1",
  "description": "Create, manage and use did:xrpl identifiers",
  "type": "module",
  "source": "src/index.ts",
  "main": "./lib/index.cjs",
  "module": "./lib/index.module.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.cjs",
      "import": "./lib/index.module.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mvadari/xrpl-did-resolver.git"
  },
  "author": "Mayukha Vadari",
  "contributors": [
    "Mayukha Vadari <mvadari@ripple.com>"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:ci": "npm test --coverage",
    "build": "microbundle --compress=false",
    "format": "prettier --write \"src/**/*.[jt]s\"",
    "lint": "eslint --ignore-pattern \"src/**/*.test.[jt]s\" \"src/**/*.[jt]s\"",
    "prepublishOnly": "npm test:ci && npm format && npm lint",
    "release": "semantic-release --debug"
  },
  "devDependencies": {
    "cross-env": "7.0.3"
  },
  "dependencies": {
    "did-jwt": "^8.0.4",
    "did-resolver": "^4.1.0",
    "xrpl": "^4.0.0",
    "xrpl-did-resolver": "0.0.1"
  }
}
